{
  "name": "redux-persist-lazy",
  "version": "0.1.0",
  "description": "persist and rehydrate redux stores lazily",
  "source": "./src/index.ts",
  "main": "./lib/commonjs/index.js",
  "module": "./lib/module/index.js",
  "types": "./src/index.ts",
  "react-native": "./src/index.ts",
  "exports": {
    ".": {
      "types": "./src/index.ts",
      "import": "./src/index.ts",
      "require": "./src/index.ts"
    }
  },
  "files": [
    "src",
    "lib",
    "!**/__tests__",
    "!**/__fixtures__",
    "!**/__mocks__",
    "!**/.*"
  ],
  "scripts": {
    "test": "jest",
    "typecheck": "tsc --noEmit",
    "lint": "eslint \"**/*.{js,ts,tsx}\"",
    "format": "prettier --write \"**/*.{js,ts,tsx}\"",
    "clean": "del-cli lib",
    "prepare": "bob build",
    "release": "release-it"
  },
  "keywords": [
    "react-native",
    "redux",
    "redux-persist"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Augustach/redux-persist-lazy.git"
  },
  "author": "Ivan Kuchaev <kuchaev.iy@gmail.com> (https://github.com/Augustach)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/Augustach/redux-persist-lazy/issues"
  },
  "homepage": "https://github.com/Augustach/redux-persist-lazy#readme",
  "publishConfig": {
    "registry": "https://registry.npmjs.org/"
  },
  "devDependencies": {
    "@commitlint/config-conventional": "^17.0.2",
    "@evilmartians/lefthook": "^1.5.0",
    "@react-native/babel-preset": "^0.74.85",
    "@react-native/eslint-config": "^0.73.1",
    "@reduxjs/toolkit": "^2.2.6",
    "@release-it/conventional-changelog": "^5.0.0",
    "@types/jest": "^29.5.12",
    "@types/react": "^18.3.3",
    "commitlint": "^17.0.2",
    "del-cli": "^5.1.0",
    "eslint": "^8.56.0",
    "jest": "^29.7.0",
    "prettier": "^3.3.2",
    "react-native-builder-bob": "^0.26.0",
    "redux-persist": "^6.0.0",
    "release-it": "^15.0.0",
    "typescript": "^5.5.3"
  },
  "peerDependencies": {
    "@reduxjs/toolkit": "*",
    "react": ">=18"
  },
  "workspaces": [
    "example"
  ],
  "packageManager": "yarn@3.6.1",
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "release-it": {
    "git": {
      "commitMessage": "chore: release ${version}",
      "tagName": "v${version}"
    },
    "npm": {
      "publish": true
    },
    "github": {
      "release": true
    },
    "plugins": {
      "@release-it/conventional-changelog": {
        "preset": "angular"
      }
    }
  },
  "react-native-builder-bob": {
    "source": "src",
    "output": "lib",
    "targets": [
      [
        "commonjs",
        {
          "esm": true
        }
      ],
      [
        "module",
        {
          "esm": true
        }
      ],
      [
        "typescript",
        {
          "project": "tsconfig.build.json"
        }
      ]
    ]
  },
  "create-react-native-library": {
    "type": "library",
    "version": "0.38.2"
  }
}
